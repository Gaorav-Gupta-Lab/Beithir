<!--Main view for Beithir App.  Holds all additional scenes.-->

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0"
            prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gupta_lab.beithir.Controllers.MainController">
    <center>
        <StackPane fx:id="vistaHolder" BorderPane.alignment="CENTER" />
    </center>

   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem fx:id="fileSave" mnemonicParsing="false" onAction="#fileSave" text="Save" />
                <SeparatorMenuItem mnemonicParsing="false"> </SeparatorMenuItem>
                <MenuItem fx:id="programExit" mnemonicParsing="false" onAction="#programExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Modules">
            <items>
                <MenuItem fx:id="Home" mnemonicParsing="false" onAction="#Home" text="Home" />
                <MenuItem fx:id="ddPCR" mnemonicParsing="false" onAction="#ddPCR" text="ddPCR" />
                <MenuItem fx:id="NGS_Library_Indexing" mnemonicParsing="false" text="NGS Library Indexing" />

            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
